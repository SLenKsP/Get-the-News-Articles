{{!-- note Model --}}
<div class="modal fade" id="modelId" tabindex="-1" role="dialog"
    aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content notes_model">
            <div>
                {{!-- close notes model --}}
                <button type="button" class="btn btn-light text-danger
                    font-weight-bolder float-right m-2"
                    data-dismiss="modal">X</button>
            </div>

            <div class="modal-body">
                {{!-- add new note --}}
                <div class="add_note">
                    <h5 class="text-info">Add New Note</h5>
                    <div class="form-group">
                        <input type="text" class="note_title form-control mb-2"
                            name="note_title" aria-describedby="helpId"
                            placeholder="Add the Title">
                        <textarea class="note_summary form-control mb-2"
                            name="note_summary" rows="3" minlength="50"
                            maxlength="100"
                            placeholder="Add your Notes here"></textarea>
                        {{!-- text empty notice --}}
                        <p class= "text_empty_notice text-danger"></p>
                        {{!-- save new note --}}
                        <button type="button" class="save_new_note btn
                            btn-success
                            float-right" >Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
