<div class="container my-1 py-0">
    <div class="jumbotron py-0">
        <h1 class="display-3 text-center text-primary">The News</h1>
        <hr>

        <div class="dropdown display-inline">
            <button type="button" class="btn btn-primary mr-2">Saved Articles</button>
            <button type="button" id = "scrap_articles" class="btn btn-primary mr-2">Load New Articles</button>
        </div>
        {{!-- show current date --}}
        <h6 class="text-right mb-0">Date: <span id="currentDate"
                class="text-primary"></span></h6>
    </div>
    {{!-- list of scrapped articles --}}
    <div id="body">
        <div class="loadnews">
            <div class="articles">
                {{#each someArticles}}
                <div class="article_item card mb-2">
                    <img class="card-img-top" src="{{this.imgUrl}}"
                        alt="img.img">
                    <div class="card-body">
                        <h4 class="card-title">{{this.articleTitle}}</h4>
                        <p class="card-text">{{this.articleText}}</p>
                        <h6>Read More... <a href="{{this.url_link}}" target="_blank">{{this.url_link}}</a></h6>
                        <button type="button" class="save_article btn
                            btn-primary mr-2">Save
                            Article</button>
                        {{!-- saved btn --}}
                        <button type="button" class="saved_article btn
                            btn-success mr-2"><i class="fa fa-check"
                                aria-hidden="true"></i>Article Saved!</button>
                        {{!-- show notes --}}
                        <button type="button" class="btn btn-info"
                            data-toggle="modal"
                            data-target="#modelId">
                            Notes
                        </button>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{!-- note Model --}}
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog"
        aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content notes_model">
                <div>
                    {{!-- close notes model --}}
                    <button type="button" class="btn btn-light text-danger
                        font-weight-bolder float-right m-2"
                        data-dismiss="modal">X</button>
                </div>

                <div class="modal-body">
                    <h5 class="text-light">Notes</h5>
                    <div class="notes">
                        {{#each notes}}
                        <div class="note_card alert alert-primary" role="alert">
                            <h6>{{notedTime}}</h6>
                            <p class="mb-0"><strong>{{note}}</strong> <i
                                    class="delete_note fa fa-trash float-right
                                    mb-2"
                                    aria-hidden="true"></i></p>

                        </div>
                        {{/each}}
                    </div>

                    <hr>
                    {{!-- add new note --}}
                    <div class="add_note">
                        <h5 class="text-light">New Note</h5>
                        <div class="form-group">
                            <input type="text" class="form-control mb-2"
                                name="note_title"
                                id="note_title" aria-describedby="helpId"
                                placeholder="Add the Title">
                            <textarea class="form-control mb-2" name="note_text"
                                id="note_text"
                                rows="3" minlength="50" maxlength="100"
                                placeholder="Add your Notes here"></textarea>
                            {{!-- save new note --}}
                            <button type="button" class="btn btn-primary
                                float-right">Save</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
</div>
